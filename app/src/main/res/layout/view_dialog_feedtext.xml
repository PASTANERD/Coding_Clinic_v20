<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/upload_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/upload_dialog_inputtext"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="내용을 입력해 주세요."

        />
    
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/upload_dialog_inputtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="@string/upload_dialog_text_hint"
        android:inputType="textMultiLine"
        app:layout_constraintTop_toBottomOf="@id/upload_dialog_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>