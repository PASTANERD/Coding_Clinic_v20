<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/feed_user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_if_user"
            android:layout_margin="@dimen/margin_feed_around"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/feed_content_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/feed_user_id"
            />

        <TextView
            android:id="@+id/feed_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feed_user_id_test"
            android:layout_margin="@dimen/margin_feed_around"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/feed_content_pic"
            app:layout_constraintLeft_toRightOf="@id/feed_user_pic"
            app:layout_constraintRight_toLeftOf="@id/feed_date"

            />

        <TextView
            android:id="@+id/feed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018 11 05 07:03"
            android:layout_margin="@dimen/margin_feed_around"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/feed_user_id"
            app:layout_constraintBottom_toTopOf="@id/feed_content_pic"
            />

        <ImageView
            android:id="@+id/feed_content_pic"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_feed_content_pic_height"
            android:src="@drawable/content_pic1"
            app:layout_constraintTop_toBottomOf="@id/feed_user_pic"
            app:layout_constraintBottom_toTopOf="@id/feed_content_like"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <ImageView
            android:id="@+id/feed_content_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mood_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/feed_content_pic"
            app:layout_constraintLeft_toLeftOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

