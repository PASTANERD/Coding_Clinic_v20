<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/boardbackground"
    tools:context=".BoardActvity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/onBoard"
        android:background="@color/transDark"
        >

    </FrameLayout>

    <TextView
        android:id="@+id/textGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/hori_side"
        android:text="Nice to See you, "
        android:textColor="#AFFFFFFF"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/onBoard"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/textName"
 />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/hori_side"
        android:text="Name"
        android:textColor="#AFFFFFFF"
        app:layout_constraintTop_toTopOf="@+id/onBoard"
        app:layout_constraintLeft_toRightOf="@+id/textGreeting"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginVertical="@dimen/hori_side"
        android:text="Tap"
        android:onClick="buttonPush"
        android:background="#7F000000"
        />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottomnavigation"
        app:itemIconTint="@color/transWhite"
        app:itemTextColor="@color/transWhite"

        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>