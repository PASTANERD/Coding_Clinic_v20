<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/login_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/if_satelite_1936917"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/login_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_text_title"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintTop_toBottomOf="@id/login_image"
        app:layout_constraintBottom_toTopOf="@id/login_frame_input"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/login_frame_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintBottom_toTopOf="@id/login_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:id="@+id/login_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_text_id"
            android:textSize="@dimen/text_size_middle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_pw_text"
            app:layout_constraintRight_toLeftOf="@id/login_id"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/login_id"
            android:layout_width="@dimen/login_id_w"
            android:layout_height="@dimen/login_id_h"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/login_pw"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_id_text"

            />

        <TextView
            android:id="@+id/login_pw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_text_pw"
            android:textSize="@dimen/text_size_middle"
            app:layout_constraintTop_toBottomOf="@id/login_id_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/login_pw"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/login_pw"
            android:layout_width="@dimen/login_pw_w"
            android:layout_height="@dimen/login_pw_h"
            app:layout_constraintTop_toBottomOf="@id/login_id"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/login_pw_text"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/login_btn_w"
        android:layout_height="@dimen/login_btn_h"
        android:text="@string/login_btn_text"
        android:onClick="loginButton"
        app:layout_constraintTop_toBottomOf="@id/login_frame_input"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>