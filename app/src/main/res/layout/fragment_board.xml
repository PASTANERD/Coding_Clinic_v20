    <ImageView
        android:id="@+id/gilde_image"
        android:layout_width="@dimen/glideImage_width"
        android:layout_height="@dimen/gildeImage_height"
        android:layout_marginVertical="@dimen/verti_side"
        android:src="@color/transDark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/button_tap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/hori_side"
        android:text="Tap"
        android:background="@color/bg_blue"
        android:textColor="@color/text_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>